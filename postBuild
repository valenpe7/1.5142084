#!/bin/bash
export LC_ALL=C

dir=$(pwd)
mkdir $dir/SDF
cd $dir/SDF

git clone https://github.com/keithbennett/SDF_C.git C
git clone https://github.com/keithbennett/SDF_utilities.git utilities

cd $dir/SDF/C ; make 
cd $dir/SDF/utilities ; ./build
rm -rf $dir/SDF

wget -q -O $dir/data.zip "https://zenodo.org/record/3707924/files/data.zip?download=1"
unzip $dir/data.zip
rm -f $dir/data.zip
